@model Initiatives.Pages.Facilities.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Facility[0].FacilityShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Facility[0].FacilityDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Facility[0].ModifiedUserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Facility[0].LastModifiedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Facility[0].IsActive)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Facility) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacilityDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FacilityId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FacilityId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FacilityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
