        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModifiedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BusinessId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BusinessId">Details</a> |
