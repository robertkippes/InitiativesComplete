<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Location[0].LocationShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location[0].LocationDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location[0].ModifiedUserName)
