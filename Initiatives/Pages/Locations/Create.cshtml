                </div>
                <div class="form-group">
                    <label asp-for="Location.LocationDescription" class="control-label"></label>
                    <input asp-for="Location.LocationDescription" class="form-control" />
                    <span asp-validation-for="Location.LocationDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default btn-xs" />
                </div>
            </form>
        </div>
        </div>
</div>

