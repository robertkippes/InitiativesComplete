@page
@model Initiatives.Pages.EAInvolvements.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>EA Involvement</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-md-push-4">
        <div class="well well-sm">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
