                <input type="hidden" asp-for="Note.ModifiedUserName" value="@this.User.Identity.Name" />
                <div class="form-group">
                    <label asp-for="Note.Note1" class="control-label"></label>
                    <textarea asp-for="Note.Note1" class="form-control" rows="5" cols="40"></textarea>
