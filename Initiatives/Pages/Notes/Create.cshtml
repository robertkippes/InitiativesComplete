@page "{id:int?}"
@using Microsoft.AspNetCore.Http
@model Initiatives.Pages.Notes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="well">
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Note.InitiativeId" value="@this.Model.InitativeId"/>
