                @Html.DisplayNameFor(model => model.Note[0].Initiative)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].Note1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note[0].UserName)
